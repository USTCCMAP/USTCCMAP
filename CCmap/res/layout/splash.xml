  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/bacground"
             />

        <Button
            android:id="@+id/button_enter_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:background="@drawable/enter_map1"
            android:onClick="onClick_EnterMap"/>


        <Button
            android:id="@+id/button_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_enter_map"
            android:layout_alignRight="@+id/button_enter_map"
            android:layout_centerVertical="true"
            android:background="@drawable/about_us1"
            android:onClick="onClick_AboutUs"/>

    </RelativeLayout>
